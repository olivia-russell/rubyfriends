<h1>Friends List</h1>
<table class="table table-striped table-bordered table-hover">
<thead class="thead-dark">

    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Email</th>
      <th>Phone</th>
      <th>Social</th>
      <th colspan="6"></th>
    </tr>
  </thead>

  <tbody>
     <% @friends.each do |friend| %>
    <tr>
      <td>
        <%= friend.first_name %>
      </td>
      <td>
        <%= friend.last_name %>
      </td>
      <td>
        <%= friend.email %>
      </td>
      <td>
        <%= friend.phone %>
      </td><td>
        <%= friend.twitter %> 
      </td>
      <td>
      <%= link_to "Show friend", friend, class:"btn btn-secondary" %>
      <td>
      <%= link_to "Edit friend", edit_friend_path(friend), class:"btn btn-secondary" %>
      <td>
      <%= button_to "Destroy friend", friend, form: { data: { turbo_confirm: "Are you sure?" } }, method: :delete,  class:"btn btn-secondary" %>

      
    </tr>
  <% end %>
  </tbody>
</table>

<%= link_to "New Friend", new_friend_path, class:"btn btn-secondary" %>